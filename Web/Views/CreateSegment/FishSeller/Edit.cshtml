@using Services.Domain.CreateSegement.Models.Fish
@model CreateSegmentFishSellerModel
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="page-content-wrapper">
    <div class="page-content">
        <div class="page-bar wow fadeInUp animated">
            <ul class="page-breadcrumb">
                <li>
                    <i class="icon-home"></i>
                    <a href="~/Dashboard"><span class="ln-english">Dashboard</span><span class="ln-bangla">প্রথম পাতা</span></a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <a href="~/CreateSegment/FishSeller"><span class="ln-english">Fish</span><span class="ln-bangla">মাছ</span></a>
                    <i class="fa fa-angle-right"></i>
                </li>
                <li>
                    <span class="ln-english">Add New Fish</span><span class="ln-bangla">বিক্রেতা সম্পাদন করুন</span>
                </li>
            </ul>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="profile-sidebar">
                    <div class="portlet light profile-sidebar-portlet wow fadeInUp animated ">

                        <div class="div-add-logo-header wow fadeInUp animated">
                            <span class="spn-add-logo-title"><span class="ln-english">Fish Image</span><span class="ln-bangla">বিক্রেতার ছবি</span></span>
                        </div>

                        <div class="profile-userpic">

                            @{
                                var imageURL = "";
                                var imageTitle = "";
                                if (Model.CreateSegmentFishSeller.ImageUrl != null && Model.CreateSegmentFishSeller.ImageUrl != null)
                                {
                                    imageURL = "" + Model.CreateSegmentFishSeller.ImageUrl;
                                    imageTitle = Model.CreateSegmentFishSeller.ImageUrl;
                                }
                                if (Model.CreateSegmentFishSeller.ImageUrl == null || Model.CreateSegmentFishSeller.ImageUrl == null)
                                {
                                    imageURL = "/rams-logo.png";
                                    imageTitle = "rams-logo.png";
                                }



                            }

                            <div class="dummy_UserImageContainerDiv wow fadeInUp animated">
                                <img src="@Url.Content("~/"+ @imageURL +"")" id="divDefaultUploadedUserImg" class="img-responsive" alt="User Logo" title="@imageTitle">
                            </div>

                        </div>

                        <div class="form-group col-sm-12">
                            <div class="col-sm-12 wow fadeInUp animated">
                                <div>
                                    <br />
                                    @using (Html.BeginForm("UploadFishImage", "CreateSegment", FormMethod.Post, new { @class = "form-horizontal", id = "frmC", role = "form", @autocomplete = "off", enctype = "multipart/form-data" }))
                                    {
                                        @(Html.Kendo().Upload()
                                                        .Name("files")
                                                        .Async(a => a
                                                            .Save("UploadFishImage", "CreateSegment")
                                                            .AutoUpload(true)
                                                        )
                                                        .Multiple(false)
                                                        .DropZone("CompanyAdminImageUploader")
                                                        .Events(events => events
                                                        .Select("onSelect")
                                                        .Success("onSuccess")
                                                        .Error("OErrorHandle")
                                                        )
                                                        .Messages(mess => mess.Select("বিক্রেতার ছবি যুক্ত করুন"))
                                                        .HtmlAttributes(new { id = "CompanyAdminUploader_UP" })
                                                        .Validation(validation =>
                                                        {
                                                            validation.AllowedExtensions(new string[] { ".jpg", ".jpeg", ".png", ".gif" });
                                                            validation.MaxFileSize(512000);//500KB max
                                                        })
                                        )
                                    }

                                </div>

                            </div>

                        </div>

                        <div class="profile-userbuttons wow fadeInUp animated" style="display:inline-block;">

                        </div>

                        <div class="profile-usermenu wow fadeInUp animated">
                            <ul class="nav">
                                <li class="active">
                                    <a style="cursor:default !important" href="javascript:;">
                                        <i class="icon-settings"></i> <span class="ln-english">New Fish Segment Create</span><span class="ln-bangla">বিক্রেতা সম্পাদন করুন</span>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="profile-content">
                    <div class="row">
                        <div class="col-md-12 portlet light">
                            <div class="portlet light right-panelbar">
                                <div class="portlet-title tabbable-line wow fadeInUp animated">
                                    <div class="caption caption-md">
                                        <i class="icon-globe theme-font hide"></i>
                                        <span class="caption-subject font-blue-madison bold uppercase"><span class="ln-english">Create New Fish Item</span><span class="ln-bangla">বিক্রেতা সম্পাদন করুন</span></span>


                                    </div>
                                    <div style="display:none; margin-top: 33px;" class="alert alert-danger" id="divForCompanyValidation">
                                        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
                                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                        <strong></strong><span id="companyValidationMessage"></span>
                                    </div>

                                </div>
                                <div class="portlet-body">
                                    <div class="tab-content">
                                        @using (Html.BeginForm("EditFishSellerSegment", "CreateSegment", FormMethod.Post, new { @class = "form-horizontal", id = "frmCreateFish", role = "form", @autocomplete = "off", enctype = "multipart/form-data" }))
                                        {
                                            @Html.AntiForgeryToken()

                                            <div class="form-wizard dummy_assessment_information_body">
                                                <div class="form-body">
                                                    @Html.HiddenFor(m => m.CreateSegmentFishSeller.ID)
                                                    @Html.HiddenFor(m => m.CreateSegmentFishSeller.ImageUrl, new { id = "dummy_userImagePath" })

                                                    <div class="form-group row xs-nopadding-left wow fadeInUp animated">
                                                        <label class="control-label col-md-4">
                                                            <span class="ln-english">Fish Name</span><span class="ln-bangla">বিক্রেতার নাম</span> <span class="required" aria-required="true"> * </span>
                                                        </label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(m => m.CreateSegmentFishSeller.Name, new { @class = "form-control", id = "FishName", autocomplete = "off", vldid = "#spnFishName" })
                                                            <span class="validation-message-color" id="#spnFishName"><span class="ln-bangla">বিক্রেতার নাম লিখুন</span></span>
                                                        </div>
                                                    </div>


                                                    <div class="form-group row xs-nopadding-left wow fadeInUp animated">
                                                        <label class="control-label col-md-4">
                                                            <span class="ln-english">Fish Details</span><span class="ln-bangla">বয়স</span>
                                                        </label>
                                                        <div class="col-md-8">

                                                            @(Html.Kendo().NumericTextBoxFor(m => m.CreateSegmentFishSeller.Age)
                                                            .Format("0 বছর")
                                                            .Min(0)
                                                            .Max(99999999)
                                                            .Step(1)
                                                            .Placeholder("0 বছর")
                                                            .HtmlAttributes(new { style = "width: 100%", title = "numeric", id = "txtNumFeedSackNumber" })
                                                            )
                                                            <span class="validation-message-color" id="#spnFishName"><span class="ln-bangla">বয়স ১৫ বছর এর বেশি নির্ধারণ করুন</span></span>
                                                        </div>
                                                    </div>

                                                    <div class="form-group row xs-nopadding-left wow fadeInUp animated">
                                                        <label class="control-label col-md-4">
                                                            <span class="ln-english">Fish Details</span><span class="ln-bangla">মাছের বর্ণনা</span>
                                                        </label>
                                                        <div class="col-md-8">

                                                            @(Html.Kendo().EditorFor(m => m.CreateSegmentFishSeller.Description)
                                                             .HtmlAttributes(new { style = "width:100%;height:150px;", @class = "form-control", aria_label = "editor", id = "FishDetails" })
                                                             .Resizable(resizable => resizable.Content(false).Toolbar(true))
                                                             .Tools(tools => tools.Clear()
                                                             .InsertUnorderedList()
                                                             .Bold().Italic().Underline()
                                                             .InsertOrderedList().CreateLink()
                                                             ))

                                                        </div>
                                                    </div>

                                                    <div class="row wow fadeInUp animated">
                                                        <div class="col-md-12 footer-button-btm-24">
                                                            <a class="btn btn-outline green dummy_back_btn pull-left" href="~/CreateSegment/FishSeller" id="btnBack"><span id="spnBack"><span class="ln-english">Back</span><span class="ln-bangla">ফেরত যান</span> </span></a>
                                                            <button class="btn green pull-right" type="submit" onclick="return FishCreateValidation();"> <span class="ln-english">Save</span><span class="ln-bangla">সংরক্ষণ করুন</span></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }

                                    </div>

                                </div>

                            </div>
                            <!-- END PROFILE CONTENT -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">

    $(document).ready(function () {
        $("#listCreate").addClass("active");
        $("#divCompany").addClass("active");

        $(".k-upload-button").removeClass("k-button");
        $(".k-upload-button").addClass("btn btn-circle green btn-sm");

        OnchangeInputControl();


    });//end document ready

    function OnchangeInputControl() {
        $('input[type=text]').on("keyup", function (e) {
            var date = $(this).attr('isNotTextField');
            if (typeof date === 'undefined' || date == "false") {
                var id = $(this).attr('id');
                var value = $(this).val();
                if (value != null && value != "") {

                    $(this).closest("div").find('span').css("display", "none");
                }
                else {
                    $(this).closest("div").find('span').css("display", "block");
                }

            }


        });

    }



    function addPreview(file) {
        var raw = file.rawFile;
        var reader = new FileReader();

        if (raw) {
            reader.onloadend = function () {
                var preview = $("<img class='image-preview img-responsive dummy_divUplodedUserImg'>").attr("src", this.result);
                $(".dummy_UserImageContainerDiv").html(preview);
                $('#divDefaultUploadedUserImg').hide();
            };

            reader.readAsDataURL(raw);
        }
    }


    function onSelect(e) {

        $("#divForProfileImageValidation").hide();
        var files = e.files;

        var fullImageName = e.files["0"].name;
        var imageExtension = e.files["0"].extension;
        var exactImageName = fullImageName.replace(imageExtension, "");
        var fileInfo = e.files[0];
        setTimeout(function () {
            addPreview(fileInfo);
        });

        $.each(files, function () {

            if (this.size > 512000 && exactImageName.length > 90) {

                //image & name validation
                $('#ProfileImageValidationMessage').text("Maximum 500KB in size and 90 characters name are allowed for company logo.");
                $('#divForProfileImageValidation').show();
                $("html, body").animate({ scrollTop: 0 }, "slow");
                $("#divForProfileImageValidation").fadeOut(5000);

                e.preventDefault();
            }

            if (this.size > 512000 && exactImageName.length <= 90) {

                //image validation
                $('#ProfileImageValidationMessage').text("Maximum 500KB image allowed for company logo.");
                $("#divForProfileImageValidation").show();
                $("html, body").animate({ scrollTop: 0 }, "slow");
                $("#divForProfileImageValidation").fadeOut(5000);

                e.preventDefault();
            }

            if (this.size <= 512000 && exactImageName.length > 90) {

                //name validation
                $('#ProfileImageValidationMessage').text("Maximum 90 characters name allowed for company logo.");
                $("#divForProfileImageValidation").show();
                $("html, body").animate({ scrollTop: 0 }, "slow");
                $("#divForProfileImageValidation").fadeOut(5000);

                e.preventDefault();
            }
        });
    }

    function OErrorHandle(e) {
        try {

            if (e.XMLHttpRequest.status == 200) {
                $(".k-upload-files.k-reset").remove();
            }

            if (e.XMLHttpRequest.response) {
                $("#dummy_userImagePath").val(e.XMLHttpRequest.response);

            }

        } catch (err) {

        }
    }

    function onSuccess(e) {
        try {

            if (typeof e.response.DynamicHtml !== 'undefined' && e.response.DynamicHtml != null) {
                setTimeout(function () {

                    $('#divDefaultUploadedUserImg').hide();
                }, 4000);
            }

        }
        catch (err) {

        }
    }


    function FishCreateValidation() {

        var isAllValid = true;
        var fishName = $.trim($("#FishName").val());
        var age = $.trim($("#txtNumFeedSackNumber").val());

        $(".dummy_fields_error_msg").hide();
        $("#divExistingEmailMessage,.validation-message-color").hide();

        if (typeof fishName === 'undefined' || fishName == "") {
            isAllValid = false;
            $("#FishName").closest("div").find('span').css("display", "block");
        }

        if (typeof age === 'undefined' || age == "" || age < 15) {
            isAllValid = false;
            $("#txtNumFeedSackNumber").closest("div").find('span').css("display", "block");
        }


        return isAllValid;

    }


</script>
