@using Services.Domain.UserBilling
@using Web.AppCode;
@model FishBillingDownloadInfo
@{
    ViewBag.Title = "GenerateFishBillingPaidAmountPDF";
    Layout = null;
}

<style type="text/css">
    body {
        font-family: 'Play', sans-serif;
        font-size: 12pt !important;
        font-weight: normal !important;
        background: #fff !important;
        margin: 0;
        padding: 0;
    }

    .header-wraper {
        display: block;
        overflow: hidden;
        margin-bottom: 20px;
        border-bottom: 2px solid #32c5d2;
    }

    .left {
        float: left;
        width: 46%;
        display: block;
    }

    .right {
        display: block;
        width: 45%;
        float: right;
        margin-right: 60px;
    }

    .sller-name {
        background: #32c5d2;
        padding: 8px 15px;
        color: #fff;
        text-transform: uppercase;
        width: 100%;
        display: block;
        overflow: hidden;
        margin-bottom: 25px;
    }

        .sller-name h1 {
            margin: 0;
        }

    .repeat-report {
        width: 100%;
        display: block;
        overflow: hidden;
    }

    .full-row {
        padding: 10px 5px;
        border-bottom: 1px dotted #32c5d2;
        border-left: 1px solid #32c5d2;
        border-right: 1px solid #32c5d2;
    }

        .full-row.first {
            border-top: 1px solid #32c5d2;
            border-bottom: 1px solid #32c5d2;
        }

        .full-row.last {
            border-top: 1px solid #32c5d2;
            border-bottom: 1px solid #32c5d2;
        }

    .one-eight {
        display: inline-block;
        width: 16%;
        text-align: left;
        overflow: hidden;
    }

    .one-five {
        display: inline-block;
        width: 19.5%;
        text-align: left;
        overflow: hidden;
    }
    

    .signatured {
        width: 100%;
        display: block;
        overflow: hidden;
    }

    .signatured-caption {
        padding: 50px 15px 8px;
        border-bottom: 1px dotted #32c5d2;
        width: 22%;
        margin-bottom: 40px;
    }
</style>

<body>
    <header>
        <div class="header-wraper">
            <div class="left">
                <strong style="display: block; font-weight: 700; margin-bottom: 15px; font-size: 50px;" class="company-name">নবীন ট্রেডার্স</strong>
                <span style="display: block; margin-bottom: 6px;">
                   @Model.TotalSellingInfo[0].SellerName  এর মাছ বিক্রির বিলিং তালিকা
                </span>
                <span style="display: block; margin-bottom: 20px;">@DateTime.Now.ToString("dd MMM yy")</span>
            </div>

            <div class="right">
                <img src="~/assets/layouts/layout2/img/logo-default.png" style="max-width: 250px !important; max-height:140px !important; float: right;" />
            </div>
        </div>
    </header>

    <div class="sller-name">
        <h1>মাছ বিক্রির বিলিং তালিকা</h1>
    </div>

    <div class="repeat-report">
        <div class="full-row first">
            <div class="one-eight">বিক্রির তারিখ</div>
            <div class="one-eight">বিক্রি</div>
            <div class="one-eight">মূল্য/কেজি</div>
            <div class="one-eight">মোট মূল্য</div>
            <div class="one-eight">প্রদান</div>
            <div class="one-eight">বকেয়া</div>
        </div>
        @for (var methodCount = 0; methodCount < Model.TotalSellingInfo.Count; methodCount++)
            {
            <div class="full-row">
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].SellDate </div>
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].TotalSellInKG কেজি</div>
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].PricePerKg টাকা</div>
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].TotalSellPrice টাকা</div>
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].FishAmountPaid টাকা</div>
                <div class="one-eight">@Model.TotalSellingInfo[methodCount].FishAmountDue টাকা</div>

            </div>
        }
        <div class="full-row last">
            <div style='width: 100%; margin-top: 30px; margin-bottom:8px; display: block; overflow: hidden;'>বিলিং তালিকা</div>
        </div>

        <div class="full-row first">
            <div class="one-five">বিলিং তারিখ</div>
            <div class="one-five">মাছের নাম</div>
            <div class="one-five">মোট মূল্য</div>
            <div class="one-five">প্রদান</div>
            <div class="one-five">বকেয়া</div>
        </div>

        @for (var methodCount = 0; methodCount < Model.BillingHistory.Count; methodCount++)
            {
            <div class="full-row">
                <div class="one-five">@Model.BillingHistory[methodCount].FishBillingDate </div>
                <div class="one-five">@Model.BillingHistory[methodCount].SellingFishName</div>
                <div class="one-five">@Model.BillingHistory[methodCount].FishBillingTotalPrice টাকা</div>
                <div class="one-five">@Model.BillingHistory[methodCount].FishBillingPaidAmount টাকা</div>
                <div class="one-five">@Model.BillingHistory[methodCount].FishBillingDueAmount টাকা</div>

            </div>
        }
    </div>

    <div class="signatured">
        <div class="signatured-caption">
            স্বাক্ষর
        </div>

    </div>

</body>


